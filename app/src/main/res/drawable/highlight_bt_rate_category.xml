<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <stroke
        android:color="@color/button_gradient1_normal"
        android:width="2dp"/>
      <solid android:color="@color/button_gradient1_normal"/>
      <corners android:radius="@dimen/button_corners_radius2"/>
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <stroke
        android:color="@color/button_gradient1_normal"
        android:width="2dp"/>
      <solid android:color="@android:color/transparent"/>
      <corners android:radius="@dimen/button_corners_radius2"/>
    </shape>
  </item>
</selector>