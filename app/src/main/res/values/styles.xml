<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorWindow</item>
    <item name="android:listViewStyle">@style/AppTheme.ListView</item>
    <item name="android:buttonStyle">@style/AppTheme.Button</item>
    <item name="android:selectableItemBackground">@drawable/highlight</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="buttonStyle">@style/AppTheme.Button</item>
  </style>

  <style name="AppTheme.NoActionBar.Dark">
    <item name="android:windowBackground">@color/colorPrimary</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.NoActionBar.SettingsStyle">
    <item name="windowActionBar">false</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="colorAccent">@color/colorSecondaryText</item>
  </style>

  <style name="AppTheme.NoActionBar.SplashScreen">
    <item name="android:windowBackground">@drawable/splash_screen</item>
  </style>


  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="AppTheme.ListView" parent="Widget.AppCompat.ListView">
    <item name="android:listSelector">@drawable/highlight</item>
    <item name="android:cacheColorHint">@android:color/transparent</item>
  </style>

  <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
    <item name="android:height">48dp</item>
    <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    <item name="android:text">@string/bt_next</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/text_size_18</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/highlight_bt_blue</item>
  </style>

  //Dialog

  <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/dialog_accent</item>
    <item name="android:textColorPrimary">@color/dialog_message</item>
    <item name="android:background">@color/dialog_fon</item>
  </style>

  //Login screen

  <style name="LoginKeyboard">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="LoginKeyboardButton">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:clickable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@drawable/highlight</item>
    <item name="android:scaleType">centerInside</item>
    <item name="android:textColor">@color/accent</item>
    <item name="android:textSize">26sp</item>
    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
  </style>

</resources>
